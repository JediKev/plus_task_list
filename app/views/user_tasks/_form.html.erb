<%= simple_form_for(@user_task, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description, as: :text, placeholder: 'Watch Star Wars' %>
    <%= f.input :due, as: :string, placeholder: 'Today', id: 'user_tas_due' %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>
